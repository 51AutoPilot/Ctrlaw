{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for Mission Control",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-stdin-write",
    "shell:allow-kill",
    "shell:allow-open",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "ssh",
          "cmd": "ssh",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "ssh",
          "cmd": "ssh",
          "args": true
        }
      ]
    },
    "fs:allow-app-read",
    "fs:allow-app-write",
    "fs:allow-appconfig-read",
    "fs:allow-appconfig-write",
    "fs:allow-appdata-read",
    "fs:allow-appdata-write",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-mkdir",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" }
      ]
    }
  ]
}
